[user]
        name = Ben Ramsden
        email = benjaminramsden@gmail.com
[core]
        excludesfile = ~/.gitignore
        editor = vim
[alias]
        st = status
        co = checkout
        c- = checkout --
        br = branch
        rb = svn rebase
        ci = commit
        cm = commit -m
        ca = commit -a
        cam = commit -a -m
        amend = commit --amend
        l = log --graph --abbrev-commit --all --pretty=format:'%C(white)%h%Creset -%C(auto)%d%Creset %<|(100,trunc)%s %C(yellow bold)<%an>%Creset'
        ll = log --graph --pretty=full --all --decorate --stat
        lol = log --graph --oneline --all --decorate
        note = branch --edit-description
        ds = diff --stat
[color]
        ui = true
[color "diff"]
        old = red bold
        new = green bold
        meta = white reverse
[color "status"]
        added = green bold
        changed = red bold
        untracked = magenta bold
        branch = bold
        nobranch = red bold
[color "branch"]
        current = green
        remote = red bold
[color "interactive"]
        prompt = yellow bold
        help = white
[push]
        default = matching
